<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pschm.klassenbuch.ListOfClass"
    android:orientation="horizontal"
    android:background="@color/logoOrange25"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/logoOrange25"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


    <fragment
        class="com.example.pschm.klassenbuch.ListOfClass$AuswahlFragment"
        android:id="@+id/auswahl"
        android:layout_weight="1"
        android:layout_width="0px"
        android:layout_height="match_parent"
        />

        <LinearLayout
            android:id="@+id/details"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <!--<TableLayout
                android:id="@+id/table"
                android:layout_width="1px"
                android:layout_height="match_parent"
                />-->

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginBottom="10dp"
                style="@style/MyTextViewStyle"/>

            <Button
                android:id="@+id/btn_enter_mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Button"
                android:textSize="20dp" />


        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
